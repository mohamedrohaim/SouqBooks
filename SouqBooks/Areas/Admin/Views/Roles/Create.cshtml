@model RoleViewModel
@{
	ViewData["Title"] = "Create Role";
	Layout = "~/Views/Shared/_Admin.cshtml";
}

<form method="post" asp-action="Create">
	<div class="border p-3 mt-4 d-flex flex-column align-items-center justify-content-center w-100">
		<div class="row pb-2">
			<h2>Create Role</h2>
			<hr />
		</div>
		<div asp-validation-summary="All"></div>
		<div class="mt-3 w-75">
			<label asp-for="RoleName" class="mb-1 fs-5"></label>
			<input asp-for="RoleName" class="form-control w-100" />
			<span asp-validation-for="RoleName" class="text-danger"></span>
			
		</div>
		<button type="submit" class="btn btn-warning mt-3">
			<i class="fa-solid fa-plus  "></i> Create
		</button>
		<a class="btn btn-danger mt-3" asp-action="Index">
			<i class="fa-solid fa-arrow-left"></i> Back To lsit
		</a>

	</div>


</form>