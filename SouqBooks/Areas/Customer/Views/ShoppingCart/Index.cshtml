@using Models.ViewModel;

@model ShoppingCartViewModel

<form method="post">
    <br />
    <div class="card ">
        <div class="card-header ">
            <div class="row px-4">
                <div class="col-6">
                    <h5 class="pt-2 text-white">
                        Shopping Cart
                    </h5>
                </div>

            </div>
        </div>
       
        @foreach (var shoppingCartItem in Model.shoppingCartItems) {
            <div class="card-body my-3">
                <div class="row mb-3 pb-3">

                    <div class="col-md-10 offset-md-1">

                        <div class="row border-bottom pb-2">
                            <div class="d-none d-lg-block col-lg-1 text-center py-2">
                                <img src="~/Images/Products/@shoppingCartItem.product.ImageUrl" class="rounded" width="100%" />
                            </div>
                            <div class="col-12 col-lg-6 pt-md-3">
                                <h5 class=""><strong>@shoppingCartItem.product.Title</strong></h5>
                               
                            </div>
                            <div class="col-12  col-lg-5 text-center row">
                                <div class="col-3 text-md-right pt-2 pt-md-4">
                                    <h6 class="fw-semibold">
                                        Count: 
                                        <span class="text-muted">@shoppingCartItem.Count</span>
                                    </h6>
                                    <h6 class="fw-semibold">
                                        Price: 
                                        <span class="text-muted">
                                            @shoppingCartItem.PriceBasedOnCount
                                            </span>
                                    </h6>
                            </div>
                            <div class="col-6 col-sm-4 col-lg-6 pt-2">
                                <div class="w-75 btn-group" role="group">
                                    <a asp-action="incrementOrderCount" asp-route-CartId="@shoppingCartItem.Id" class="btn btn-outline-primary bg-gradient py-2">
                                            <i class="fa-solid fa-plus"></i>
                                    </a>
                                        <a asp-action="decrementOrderCount" asp-route-CartId="@shoppingCartItem.Id" class="btn btn-outline-primary bg-gradient py-2">
                                          <i class="fa-solid fa-minus"></i>
                                    </a>
                                </div>

                            </div>
                            <div class="col-3 col-sm-4 col-lg-2 offset-lg-1 text-right pt-2">
                                <a href="#" class="btn btn-danger bg-gradient py-2 ">
                                        <i class="fa-solid fa-trash-can"></i>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
			</div>
       }
                <div class="card-footer border-0">
                    <div class="row">
                        <div class="col-md-4 offset-md-4">
                            <ul class="list-group mb-4">
                                <li class="d-flex justify-content-between align-items-center">
                                    <h5 > Total (EGP)</h5>
                            <h4>@Model.TotalPrice E£</h4>
                                </li>
                            </ul>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-2 offset-md-5">
                            <a asp-action="Summary" class="btn btn-primary border-0 bg-gradient w-100 py-2">Cart Summary</a>
                        </div>
                    </div>
                </div>
           
</form>
