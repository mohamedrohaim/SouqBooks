@using Models.ViewModel;
@model LoginViewModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-7">
			<div class="card shadow-lg border-0 rounded-lg mt-5">
				<div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
				<div class="card-body">
					<form asp-action="Login" method="post">
						<div class="form-floating mb-3">
							<input class="form-control" asp-for="Email" type="email" placeholder="name@example.com" />
							<label asp-for="Email"></label>
							<span class="text-danger" asp-validation-for="Email"></span>
						</div>
						<div class="form-floating mb-3">

							<div class="form-floating mb-3 mb-md-0">
								<input class="form-control" asp-for="Password" type="password" placeholder="Create a password" />
								<label asp-for="Password"></label>
								<span class="text-danger" asp-validation-for="Password"></span>
							</div>

						</div>
						<div class="d-flex mb-3">

								<label >Forget password ? </label>
								<a asp-action="resetPassword" class="ms-1 text-decoration-none"> reset Password</a>

						</div>
						<div class="card-footer text-center py-3">
							<div class="d-flex justify-content-around mt-3">
								<button type="submit"  class="btn btn-primary w-25">Login</button>
								<span>Dont't an account ? <a asp-action="Register" class="text-info text-decoration-none">Register Now</a></span>
							</div>
						</div>
					</form>
				</div>
			
			</div>
		</div>
	</div>
</div>



@section scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

