@using Models.ViewModel;
@model ResetPasswordViewModel
@{
	ViewData["Title"] = "Login";
	Layout = "~/Views/Shared/_AccountLayout.cshtml";
}

<div class="container">
	<div class="row justify-content-center">
		<div class="col-lg-7">
			<div class="card shadow-lg border-0 rounded-lg mt-5">
				<div class="card-header"><h3 class="text-center font-weight-light my-4">Create Account</h3></div>
				<div class="card-body">
					<form asp-action="ResetPassword" method="post">
						<div class="form-floating mb-3">
							<input class="form-control" asp-for="NewPassword" type="password"  />
							<label asp-for="NewPassword"></label>
							<span class="text-danger" asp-validation-for="NewPassword"></span>
						</div>
						<div class="form-floating mb-3">

							<div class="form-floating mb-3 mb-md-0">
								<input class="form-control" asp-for="ConfirmPassword" type="password"/>
								<label asp-for="ConfirmPassword"></label>
								<span class="text-danger" asp-validation-for="ConfirmPassword"></span>
							</div>

						</div>
						
						<div class="card-footer text-center py-3">
							<div class="d-flex justify-content-around mt-3">
								<button type="submit"  class="btn btn-primary w-25">Reset Password</button>
								<span>Dont't an account ? <a asp-action="Register" class="text-info text-decoration-none">Register Now</a></span>
							</div>
						</div>
					</form>
				</div>

			</div>
		</div>
	</div>
</div>



@section scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}

